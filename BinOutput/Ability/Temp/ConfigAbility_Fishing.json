[
  ////////////////////////////////////////////////////////////////
  //
  //  钓鱼系统 - 钓鱼状态及按键处理
  //
  ////////////////////////////////////////////////////////////////
  {
    "Default": {
      "$type": "ConfigAbility",
      "abilityName": "Avatar_Common_Fishing",
      "isDynamicAbility": true,
      "onAdded": [
        {
          "$type": "AttachModifier",
          "modifierName": "Avatar_Fishing_AddSkillInfo"
        },
        {
          "$type": "AttachModifier",
          "modifierName": "Avatar_Fishing_ChangePlayMode"
        },
        {
          "$type": "AttachModifier",
          "modifierName": "Avatar_Fishing_Start"
        },
        {
          "$type": "AttachModifier",
          "modifierName": "Avatar_Fishing_Invincible_Buff"
        },
        {
          "$type": "AttachModifier",
          "modifierName": "Avatar_Fishing_DenyLock_Buff"
        },
        {
          "$type": "AttachModifier",
          "modifierName": "Avatar_Fishing_Ghost_Buff"
        }
      ],
      "abilityMixins": [
        {
          "$type": "AttachToStateIDMixin",
          "stateIDs": [
            "Fishing_Choose",
            "Fishing_Cast_BS",
            "Fishing_Cast_Loop",
            "Fishing_Cast_AS",
            "Fishing_Wait",
            "Fishing_Pull",
            "Fishing_Battle",
            "Fishing_End"
          ],
          "modifierName": "Avatar_Fishing_StateTag"
        },
        {
          "$type": "AttachToStateIDMixin",
          "stateIDs": [
            "Fishing_Choose",
            "Fishing_Cast_BS",
            "Fishing_Cast_Loop",
            "Fishing_Pull",
            "Fishing_Cast_AS"
          ],
          "modifierName": "Avatar_Fishing_ChangeButton_Choose"
        },
        {
          "$type": "AttachToStateIDMixin",
          "stateIDs": ["Fishing_Wait"],
          "modifierName": "UNIQUE_Avatar_Fishing_ChangeButton_Wait"
        },
        // {
        //     "$type": "AttachToStateIDMixin",
        //     "stateIDs": ["Fishing_Battle"],
        //     "modifierName": "Avatar_Fishing_ChangeButton_Battle",
        // },
        {
          "$type": "AttachToStateIDMixin",
          "stateIDs": [
            "Fishing_Choose",
            "Fishing_Cast_BS",
            "Fishing_Cast_Loop",
            "Fishing_Cast_AS",
            "Fishing_Wait",
            "Fishing_Pull",
            "Fishing_Battle"
          ],
          "modifierName": "Avatar_Fishing_ChangeButton_Exit"
        }
      ],
      "modifiers": {
        //进入钓鱼选杆选饵阶段
        "Avatar_Fishing_Start": {
          "duration": 0.5,
          "onAdded": [
            {
              "$type": "SetAnimatorTrigger",
              "triggerID": "PRIVATE_Fishing_Start"
            }
          ]
        },
        //切换钓鱼模式，屏蔽一些不用的按键
        "Avatar_Fishing_ChangePlayMode": {
          "onAdded": [
            {
              "$type": "ChangePlayMode",
              "muteRemoteAction": true,
              "toPlayMode": "Fishing",
              "doOffStage": true
            }
          ],
          "onRemoved": [
            {
              "$type": "ChangePlayMode",
              "muteRemoteAction": true,
              "toPlayMode": "Normal",
              "doOffStage": true
            }
          ]
        },
        //选杆阶段   暂时和抛竿按键一致，否则导致按键会断掉
        "Avatar_Fishing_ChangeButton_Choose": {
          "modifierMixins": [
            {
              "$type": "SwitchSkillIDMixin", //抛竿按键
              "priority": "Playmode",
              "skillIndex": 0,
              "skillID": 20311
            },
            {
              "$type": "SwitchSkillIDMixin", //换饵按键
              "priority": "Playmode",
              "skillIndex": 2,
              "skillID": 20316
            }
          ]
        },
        //等待阶段
        "UNIQUE_Avatar_Fishing_ChangeButton_Wait": {
          "isUnique": true,
          "modifierMixins": [
            {
              "$type": "SwitchSkillIDMixin", //收杆按键
              "priority": "Playmode",
              "skillIndex": 0,
              "skillID": 20314
            }
          ]
        },
        //退出按钮显示
        "Avatar_Fishing_ChangeButton_Exit": {
          "modifierMixins": [
            {
              "$type": "SwitchSkillIDMixin", //退出按键
              "priority": "Playmode",
              "skillIndex": 3,
              "skillID": 20315
            }
          ]
        },
        //动态上下钓鱼按键SkillInfo
        "Avatar_Fishing_AddSkillInfo": {
          "onAdded": [
            {
              "$type": "AddAvatarSkillInfo",
              "skillID": 20310
            },
            {
              "$type": "AddAvatarSkillInfo",
              "skillID": 20311
            },
            {
              "$type": "AddAvatarSkillInfo",
              "skillID": 20314
            },
            {
              "$type": "AddAvatarSkillInfo",
              "skillID": 20315
            },
            {
              "$type": "AddAvatarSkillInfo",
              "skillID": 20316
            }
          ],
          "onRemoved": [
            {
              "$type": "RemoveAvatarSkillInfo",
              "skillID": 20310
            },
            {
              "$type": "RemoveAvatarSkillInfo",
              "skillID": 20311
            },
            {
              "$type": "RemoveAvatarSkillInfo",
              "skillID": 20314
            },
            {
              "$type": "RemoveAvatarSkillInfo",
              "skillID": 20315
            },
            {
              "$type": "RemoveAvatarSkillInfo",
              "skillID": 20316
            }
          ]
        },
        //钓鱼状态下Tag标记
        "Avatar_Fishing_StateTag": {
          "onAdded": [
            {
              "$type": "SetGlobalValue",
              "key": "_ABILITY_Fishing_Tag",
              "value": 1,
              "doOffStage": true
            }
          ],
          "onRemoved": [
            {
              "$type": "SetGlobalValue",
              "key": "_ABILITY_Fishing_Tag",
              "value": 0,
              "doOffStage": true
            }
          ]
        },
        //钓鱼状态中的无敌Buff
        "Avatar_Fishing_Invincible_Buff": {
          "state": "Invincible",
          "onAdded": [
            {
              "$type": "AttachAbilityStateResistance",
              "resistanceListID": 11002
            }
          ],
          "thinkInterval": 2.0,
          "onThinkInterval": [
            {
              "$type": "RemoveModifier",
              "modifierName": "Avatar_Fishing_Invincible_Buff",
              "predicates": [
                {
                  "$type": "ByTargetGlobalValue",
                  "key": "_ABILITY_Fishing_Tag",
                  "value": 0,
                  "compareType": "Equal"
                }
              ]
            }
          ]
        },
        "Avatar_Fishing_DenyLock_Buff": {
          "state": "DenyLockOn",
          "thinkInterval": 2.0,
          "onThinkInterval": [
            {
              "$type": "RemoveModifier",
              "modifierName": "Avatar_Fishing_DenyLock_Buff",
              "predicates": [
                {
                  "$type": "ByTargetGlobalValue",
                  "key": "_ABILITY_Fishing_Tag",
                  "value": 0,
                  "compareType": "Equal"
                }
              ]
            }
          ]
        },
        "Avatar_Fishing_Ghost_Buff": {
          "state": "IsGhostToEnemy",
          "thinkInterval": 2.0,
          "onThinkInterval": [
            {
              "$type": "RemoveModifier",
              "modifierName": "Avatar_Fishing_Ghost_Buff",
              "predicates": [
                {
                  "$type": "ByTargetGlobalValue",
                  "key": "_ABILITY_Fishing_Tag",
                  "value": 0,
                  "compareType": "Equal"
                }
              ]
            }
          ]
        }
      }
    }
  },

  ////////////////////////////////////////////////////////////////
  //
  //  钓鱼系统 - 抛竿瞄准阶段
  //
  ////////////////////////////////////////////////////////////////
  {
    "Default": {
      "$type": "ConfigAbility",
      "abilityName": "Avatar_Common_Fishing_Cast",
      "isDynamicAbility": true,
      "onAdded": [
        {
          "$type": "SetGlobalValue",
          "key": "_ABILITY_Fishing_Aim_Length", //镜头俯仰角控制抛射距离
          "value": 0
        },
        {
          "$type": "SetGlobalValue",
          "key": "_ABILITY_Fishing_Pool_Legal", //瞄准区域是否合法判定
          "value": 0
        },
        {
          "$type": "SetGlobalValue",
          "key": "_ABILITY_Fishing_IsBaitEnough", //判断鱼饵是否充足
          "value": 0
        }
      ],
      "abilityMixins": [
        {
          "$type": "AttachToStateIDMixin",
          "stateIDs": [
            "Fishing_Cast_BS",
            "Fishing_Cast_Loop",
            "Fishing_Cast_AS"
          ],
          "modifierName": "Fishing_Cast_Focus"
        },
        {
          "$type": "AttachToStateIDMixin",
          "stateIDs": ["Fishing_Cast_BS", "Fishing_Cast_Loop"],
          "modifierName": "Fishing_Aim"
        },
        {
          "$type": "AttachToNormalizedTimeMixin",
          "stateID": "Fishing_Cast_AS",
          "modifierName": "Fishing_Cast_TriggerBullet",
          "normalizeStart": 0.26
        },
        {
          "$type": "ButtonHoldChargeMixin",
          "skillID": 20311,
          "chargeTime": 99999,
          "OnBeginUncharged": [
            {
              "$type": "Predicated",
              "targetPredicates": [
                {
                  "$type": "ByTargetGlobalValue",
                  "key": "_ABILITY_Fishing_IsBaitEnough", //抛竿时检测是否有鱼饵
                  "value": 1,
                  "compareType": "Equal"
                }
              ],
              "successActions": [
                {
                  "$type": "SetAnimatorTrigger",
                  "triggerID": "PRIVATE_Fishing_Cast"
                }
              ],
              "failActions": [
                {
                  "$type": "FireFishingEvent",
                  "eventType": "NotifyBait"
                }
              ]
            },
            {
              "$type": "ResetAnimatorTrigger",
              "triggerID": "EndHoldTrigger"
            },
            {
              "$type": "RemoveModifier",
              "modifierName": "Delay_SetTrigger"
            }
          ],
          "OnReleaseUncharged": [
            {
              "$type": "SetAnimatorTrigger",
              "triggerID": "EndHoldTrigger"
            },
            {
              "$type": "ApplyModifier",
              "modifierName": "Delay_SetTrigger"
            },
            {
              "$type": "DebugLog",
              "content": "抛竿"
            }
          ],
          "chargeStateIDs": ["Fishing_Cast_BS", "Fishing_Cast_Loop"]
        }
      ],
      "modifiers": {
        //延迟一点再强制退出一次
        "Delay_SetTrigger": {
          "duration": 0.6,
          "onRemoved": [
            {
              "$type": "SetAnimatorTrigger",
              "triggerID": "EndHoldTrigger"
            }
          ]
        },
        //瞄准进入Focus镜头(自由移动镜头)
        "Fishing_Cast_Focus": {
          "onAdded": [
            {
              "$type": "AvatarEnterFocus",
              "cameraFollowLower": {
                "x": 0.8,
                "y": 1.0,
                "z": -2.5
              },
              "cameraFollowUpper": {
                "x": 0.5,
                "y": 0.0,
                "z": 0.0
              },
              "cameraFastFocusMode": true,
              "cameraFollowMaxDegree": 0,
              "cameraFollowMinDegree": -60, //原本上下限 -60,60
              "dragButtonName": "Skill1",
              "assistance": {
                "ps4": {
                  "useGyro": false
                },
                "ps5": {
                  "useGyro": false
                },
                "other": {
                  "useGyro": true
                }
              },
              "canMove": false,
              "showCrosshair": false,
              "vcam_fov": 20
            },
            {
              "$type": "PlayEmoSync",
              "emoSyncAssetPath": "Cutscene/ShortDialog/Cs_Emo_Avatar_Simple_Common_Set/Cs_Emo_Avatar_Common_Bow_Fight_Aim"
            },
            {
              "$type": "ControlEmotion",
              "toggleBlink": false
            }
          ],
          "onRemoved": [
            {
              "$type": "AvatarExitFocus",
              "keepRotation": true
            },
            {
              "$type": "PlayEmoSync",
              "emoSyncAssetPath": "Cutscene/ShortDialog/Cs_Emo_Avatar_Simple_Common_Set/Cs_Emo_Avatar_Common_Normal"
            },
            {
              "$type": "ControlEmotion",
              "toggleBlink": true
            }
          ]
        },
        //控制瞄准线与发射鱼漂
        "Fishing_Aim": {
          "onAdded": [
            {
              "$type": "AttachEffect",
              "effectPattern": "Eff_Avatar_Fishing_Aim_Line", //特效由鱼竿端点发射
              "otherTargets": {
                "$type": "SelectTargetsByChildrenEntityType",
                "entityType": "FishRod",
                "sortType": "Default"
              }
            }
          ],
          "onRemoved": [
            {
              "$type": "SetGlobalPos",
              "key": "_ABILITY_FishingRod_Pos", //将鱼竿端点位置存在角色身上
              "otherTargets": {
                "$type": "SelectTargetsByChildrenEntityType",
                "entityType": "FishRod",
                "sortType": "Default"
              },
              "born": {
                "$type": "ConfigBornByAttachPoint",
                "attachPointName": "LinePoint",
                "attachPointTargetType": "Target"
              },
              "setTarget": false
            }
          ],
          //通过镜头俯仰角实时更新GV值
          "modifierMixins": [
            {
              "$type": "FishingAimParabolaMixin",
              "globalValueKey": "_ABILITY_Fishing_Aim_Length",
              "minAngle": -60,
              "maxAngle": 0,
              "minRange": 2,
              "maxRange": 15,
              //同时把GlobalValue值传给Target
              "otherTargets": {
                "$type": "SelectTargetsByChildrenEntityType",
                "entityType": "FishRod",
                "sortType": "Default"
              }
            }
          ]
        },
        //发射鱼漂
        "Fishing_Cast_TriggerBullet": {
          "onAdded": [
            {
              "$type": "TriggerBullet",
              "bulletID": 42000001,
              "born": {
                "$type": "ConfigBornByGlobalValue",
                "positionKey": "_ABILITY_FishingRod_Pos"
              }
            },
            {
              "$type": "RemoveModifier",
              "modifierName": "Fishing_Cast_Focus"
            }
          ]
        }
      }
    }
  },
