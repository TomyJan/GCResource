  ////////////////////////////////////////////////////////////////
  //
  //  钓鱼系统 - 等待阶段
  //
  ////////////////////////////////////////////////////////////////
  {
    "Default": {
      "$type": "ConfigAbility",
      "abilityName": "Avatar_Common_Fishing_Waiting",
      "isDynamicAbility": true,
      "onAdded": [
        {
          "$type": "AttachModifier",
          "modifierName": "Avatar_Fishing_AddBattleSkill"
        }
      ],
      //鱼儿上钩时进入Trigger
      "onAbilityStart": [
        {
          "$type": "RemoveUniqueModifier",
          "modifierName": "UNIQUE_Avatar_Fishing_ChangeButton_Wait"
        },
        {
          "$type": "AttachModifier",
          "modifierName": "Avatar_Fishing_ChangeButton_Battle"
        },
        {
          "$type": "SetSelfAttackTarget",
          "target": "Other"
        },
        {
          "$type": "TriggerAbility",
          "abilityName": "Avatar_Common_FishingRod",
          "otherTargets": {
            "$type": "SelectTargetsByChildrenEntityType",
            "entityType": "FishRod",
            "sortType": "Default"
          },
          "forceUseSelfCurrentAttackTarget": true //把自己的SelfAttackTarget传过去
        }
      ],
      "abilityMixins": [
        {
          "$type": "AttachToStateIDMixin",
          "stateIDs": ["Fishing_Wait", "Fishing_Battle"],
          "modifierName": "Avatar_Fishing_RemoveChangeSkill"
