        "WetModifier": {
          "duration": 8.0,
          "elementType": "Water",
          "elementDurability": 40,
          "overrideWeaponElement": true,
          "onAdded": [
            {
              "$type": "AttachEffect",
              "effectPattern": "Eff_Element_Wet"
            }
          ]
        }
      }
    }
  },
  ////////////////////////////////////////////////////////////////////////////////////
  //
  // 木棉花
  //
  ////////////////////////////////////////////////////////////////////////////////////
  {
    "Default": {
      "$type": "ConfigAbility",
      "abilityName": "Test_KapokFlower_Interact",
      "onAdded": [
        {
          "$type": "AttachModifier",
          "modifierName": "ElementWaterModifier",
          "target": "Self"
        }
      ],
      "modifiers": {
        "ElementWaterModifier": {
          "onBeingHit": [
            {
              "$type": "SetAnimatorBool",
