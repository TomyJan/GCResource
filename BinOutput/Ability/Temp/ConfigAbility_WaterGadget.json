                {
                  "$type": "ByHitElement",
                  "element": "Water"
                }
              ]
            }
          ],
          "onRemoved": [
            {
              "$type": "AttachModifier",
              "modifierName": "Grow"
            }
          ]
        },
        "Grow": {
          "duration": 1.1,
          "onAdded": [
            {
              "$type": "AttachEffect",
              "effectPattern": "Eff_ItemFlower_Bloom"
            }
          ],
          "onRemoved": [
            {
              "$type": "TriggerGadgetInteractive"
            }
          ]
        }
      }
