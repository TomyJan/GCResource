[
  /////////////////////////////////////////////////////////////////////////////////////
  //
  // 石油
  //
  /////////////////////////////////////////////////////////////////////////////////////
  {
    "Default": {
      "$type": "ConfigAbility",
      "abilityName": "Oil_Interact",
      "onAdded": [
        {
          "$type": "AttachModifier",
          "modifierName": "NormalModifier"
        }
      ],
      "modifiers": {
        "NormalModifier": {
          "elementType": "Wood",
          "elementDurability": 5,
          "isElementDurabilityMutable": false,
          "onBeingHit": [
            {
              "$type": "ApplyModifier",
              "modifierName": "Burning",
              "target": "Self",
              "predicates": [
                {
                  "$type": "ByHitElement",
                  "element": "Fire"
                },
                {
                  "$type": "ByNot",
                  "predicates": [
                    {
                      "$type": "ByHasElement",
                      "element": "Fire"
                    }
                  ]
                }
              ]
            },
            {
              "$type": "ApplyModifier",
              "modifierName": "On_Burning",
              "target": "Self",
              "predicates": [
                {
                  "$type": "ByHitElement",
                  "element": "Fire"
                },
                {
                  "$type": "ByNot",
                  "predicates": [
                    {
                      "$type": "ByHasElement",
                      "element": "Fire"
                    }
                  ]
                }
              ]
            }
          ]
        },
        "On_Burning": {
          "onBeingHit": [
            {
              "$type": "ApplyModifier",
              "modifierName": "Check_Fire",
              "target": "Self",
              "predicates": [
                {
                  "$type": "ByHitElement",
                  "element": "Water"
                }
              ]
            },
            {
              "$type": "ApplyModifier",
              "modifierName": "Check_Fire",
              "target": "Self",
              "predicates": [
                {
                  "$type": "ByHitElement",
                  "element": "Ice"
                }
              ]
            }
          ],
          "onRemoved": [
            //延迟3秒后检测自身周围火源
            {
              "$type": "ApplyModifier",
              "target": "Self",
              "modifierName": "Delay"
            },
            {
              "$type": "FireEffect",
              "effectPattern": "Eff_FireBasin_Smoke",
              "born": {
                "$type": "ConfigBornByAttachPoint",
                "attachPointName": "attachPoint",
                "offset": {
                  "x": 0.0,
                  "y": 0.0,
                  "z": 0.0
                }
              }
            }
          ]
        },
        "Check_Fire": {
          "duration": 0.2,
          "onRemoved": [
            //检测自身是否熄灭
            {
              "$type": "RemoveModifier",
              "modifierName": "On_Burning",
              "predicates": [
                {
                  "$type": "ByNot",
                  "predicates": [
                    {
                      "$type": "ByHasElement",
                      "element": "Fire"
                    }
                  ]
                }
              ]
            }
          ]
        },
        "Check_Around": {
          "duration": 0.2,
          "onAdded": [
            {
              "$type": "Predicated",
              "target": "Self",
              "targetPredicates": [
                {
                  "$type": "ByHasElement",
                  "element": "Fire"
                }
              ],
              "successActions": [
                //若自身着火则反向点燃搜寻者
                {
                  "$type": "DamageByAttackValue",
                  "target": "Caster",
                  "attackInfo": {
                    "attackProperty": {
                      "damagePercentage": 0.1,
                      "strikeType": "Default",
                      "elementType": "Fire",
                      "elementDurability": 40
                    },
                    "hitPattern": {
                      "onHitEffectName": "default",
                      "overrideHitImpulse": {
                        "hitLevel": "Air",
                        "hitImpulseX": 0,
                        "hitImpulseY": 420
                      },
                      "reboundRatio": 0,
                      "canBeDefenceHalt": false,
                      "hitHaltTime": 0.0,
                      "hitHaltTimeScale": 0.01,
                      "muteHitText": false
                    }
                  }
                }
              ]
            }
          ]
        },
        "Delay": {
          "duration": 4.5,
          "thinkInterval": 3,
          "onThinkInterval": [
            {
              "$type": "ApplyModifier",
              "modifierName": "Check_Around",
              "otherTargets": {
                "$type": "SelectTargetsByShape",
                "shapeName": "CircleR5",
                "centerBasedOn": "Self",
                "campTargetType": "SelfCamp",
                "campBasedOn": "Self"
              }
            }
          ]
        },
        "Burning": {
          "duration": 1.2,
          "thinkInterval": 1,
          "onThinkInterval": [
            {
              "$type": "DamageByAttackValue",
              "otherTargets": {
                "$type": "SelectTargetsByShape",
                "shapeName": "CircleR5",
                "centerBasedOn": "Self",
                "campTargetType": "SelfCamp",
                "campBasedOn": "Self"
              },
              "attackInfo": {
                "attackProperty": {
                  "damagePercentage": 0.1,
                  "strikeType": "Default",
                  "elementType": "Fire",
                  "elementDurability": 40
                },
                "hitPattern": {
                  "onHitEffectName": "default",
                  "overrideHitImpulse": {
                    "hitLevel": "Air",
                    "hitImpulseX": 0,
                    "hitImpulseY": 420
                  },
                  "reboundRatio": 0,
                  "canBeDefenceHalt": false,
                  "hitHaltTime": 0.0,
                  "hitHaltTimeScale": 0.01,
                  "muteHitText": false
                }
              }
            }
          ]
        }
      }
    }
  }
]
