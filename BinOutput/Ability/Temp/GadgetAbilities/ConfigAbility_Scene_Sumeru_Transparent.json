[
  //////////////////////////////////////////////////////////////////////////////////////////////////
  //
  // Create By Mazijun
  //	该文件收纳须弥的透明化物件
  //
  //////////////////////////////////////////////////////////////////////////////////////////////////
  //////////////////////////////////////////////////////////////////////////////////////////////////
  //
  //	透明化物件_植物操作台
  //
  //////////////////////////////////////////////////////////////////////////////////////////////////
  {
    "Default": {
      "$type": "ConfigAbility",
      "abilityName": "SceneObj_Area_Xm_Property_Prop_PlantOperator_NoiseClip_01_Ability",
      "abilityMixins": [
        //透明化物件状态0统一用于透明，200用于透明物件显形逻辑
        {
          "$type": "AttachToGadgetStateMixin",
          "gadgetState": 0,
          "modifierName": "Disactive"
        },
        {
          "$type": "AttachToGadgetStateMixin",
          "gadgetState": 200,
          "modifierName": "Idle"
        },
        {
          "$type": "AttachToGadgetStateMixin",
          "gadgetState": 201,
          "modifierName": "Active"
        },
        {
          //与其交互时
          "$type": "WidgetMpSupportMixin",
          "succActions": [
            {
              "$type": "ChangeGadgetState",
              "state": 201,
              "predicates": [
                {
                  "$type": "ByTargetGadgetState",
                  "target": "Self",
                  "gadgetState": 200
                }
              ]
            }
          ]
        }
      ],
      "modifiers": {
        "Disactive": {
          "onAdded": [
            {
              "$type": "EnableGadgetInteeMp",
              "enable": false
            }
          ]
        },
        "Idle": {
          //显形后的受击
          "onAdded": [
            {
              "$type": "EnableGadgetInteeMp",
              "enable": true
            },
            {
              "$type": "AttachEffect",
              "effectPattern": "Eff_SceneObj_PlantOperator_01_Stay"
            },
            {
              "$type": "SetMaterialParamFloatByTransform",
              "matName": "Gadget",
              "patternName": "_EmissionStrength",
              "value": 2,
              "canBeHandledOnRecover": true
            }
          ]
        },
        "Active": {
          "onAdded": [
            {
              "$type": "EnableGadgetInteeMp",
              "enable": false
            },
            {
              "$type": "AttachEffect",
              "effectPattern": "Eff_SceneObj_PlantOperator_01_Active"
            },
            {
              "$type": "SetMaterialParamFloatByTransform",
              "matName": "Gadget",
              "patternName": "_EmissionStrength",
              "value": 4,
              "canBeHandledOnRecover": true
            }
          ]
        }
      }
    }
  },
  //////////////////////////////////////////////////////////////////////////////////////////////////
  //
  //	透明化物件_不灭火盆
  //
  //////////////////////////////////////////////////////////////////////////////////////////////////
  {
    "Default": {
      "$type": "ConfigAbility",
      "abilityName": "SceneObj_Area_Xm_Property_Ani_Prop_InivisbleImmortalFire_01_Ability",
      "abilityMixins": [
        //透明化物件状态0统一用于透明，200用于透明物件显形逻辑
        {
          "$type": "AttachToGadgetStateMixin",
          "gadgetState": 200,
          "modifierName": "HitWatcher"
        },
        {
          "$type": "AttachToGadgetStateMixin",
          "gadgetState": 201,
          "modifierName": "Actived"
        }
      ],
      "modifiers": {
        "HitWatcher": {
          //显形后的受击
          "onBeingHit": [
            {
              "$type": "Predicated",
              "target": "Self",
              "targetPredicates": [
                {
                  "$type": "ByHitElement",
                  "element": "Fire"
                }
              ],
              "successActions": [
                {
                  //切到200是为了使其切走
                  "$type": "ChangeGadgetState",
                  "state": 201
                }
              ]
            }
          ]
        },
        "Actived": {
          "onAdded": [
            {
              "$type": "AttachEffect",
              "effectPattern": "Eff_SceneObj_ImmortalFire_01_Fire"
            }
          ]
        }
      }
    }
  }
]
