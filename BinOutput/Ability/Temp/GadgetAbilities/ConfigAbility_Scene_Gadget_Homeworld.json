              "useLimitRange": true,
              "randomInRange": true,
              "minValue": 1,
              "maxValue": 10
            },
            {
              "$type": "SetAnimatorTrigger",
              "triggerID": "Show01",
              "MPTriggerOnRemote": true,
              "predicates": [
                {
                  "$type": "ByTargetGlobalValue",
                  "key": "_Show_Mode",
                  "value": 7,
                  "compareType": "LessAndEqual"
                }
              ]
            },
            {
              "$type": "SetAnimatorTrigger",
              "triggerID": "Show02",
              "MPTriggerOnRemote": true,
              "predicates": [
                {
                  "$type": "ByTargetGlobalValue",
                  "key": "_Show_Mode",
                  "value": 7,
                  "maxValue": 11,
                  "compareType": "Between" // 8 ~ 10
                }
              ]
            }
          ]
        }
      }
    }
  }
