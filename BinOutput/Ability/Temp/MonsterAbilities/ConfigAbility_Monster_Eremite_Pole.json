        // 距离判断  接跳跃攻击
        {
          "$type": "SetAnimatorTrigger",
          "triggerID": "Rush2Slash",
          "predicates": [
            {
              "$type": "ByTargetPositionToSelfPosition",
              "target": "SelfAttackTarget",
              "compareType": "XZ",
              "logic": "Lesser",
              "value": 8.2
            }
          ]
        },
        // 打攻击盒
        {
          "$type": "TriggerAttackEvent",
          "targetType": "Enemy",
          "attackEvent": {
            "attackPattern": {
              "$type": "ConfigAttackBox",
              "triggerType": "TriggerNoRepeat",
              "size": {
                "x": 1,
                "y": 1,
                "z": 4.5
              },
              "born": {
