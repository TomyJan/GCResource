  // Rush
  {
    "Default": {
      "$type": "ConfigAbility",
      /// @desc 触发： 冲锋接劈砍判定 以及打出一个较低伤害的攻击盒
      "abilityName": "Eremite_Pole_Rush_Detection",
      //  距离够近则设定状态机，是否是面向玩家则由状态机连线的角度确定
