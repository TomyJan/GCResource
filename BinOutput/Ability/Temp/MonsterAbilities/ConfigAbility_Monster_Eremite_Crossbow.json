  {
    "Default": {
      "$type": "ConfigAbility",
      "abilityName": "Eremite_Crossbow_RapidShoot_Fire",
      "onAbilityStart": [
        // 发射子弹
        {
          "$type": "TriggerBullet",
          "bulletID": 42520002,
          "born": {
            "$type": "ConfigBornByAttachPoint",
            "attachPointName": "WeaponR",
            "offset": {
              "x": 0.2,
              "y": 0,
              "z": 0.1
            },
            "direction": {
              "$type": "ConfigDirectionByAttackTarget",
              "randomAngleHor": 1.4,
              "randomAngleVer": 0.9,
              "maxAngle": 30.0
            }
          }
        },
        // 播放特效
        {
          "$type": "FireEffect",
          "effectPattern": "Eff_Monster_Eremite_Crossbow_Shoot_01"
        },
        // 子弹发射控制逻辑:
        // 设定随机的持续时间 - 持续时间到了后结束循环 - 实际表现上为攻击3~5次
        {
          "$type": "SetRandomOverrideMapValue",
          "overrideMapKey": "shootingDuration",
          "valueRangeMin": 2,
          "valueRangeMax": 5
        },
        {
          "$type": "ApplyModifier",
          "modifierName": "In_RapidShooting" // Stacking为Unique，不会覆盖
        }
      ],
      "abilitySpecials": {
        "shootingDuration": 4
      },
      "modifiers": {
        "In_RapidShooting": {
          // 此Modifier移除时结束连发射击
          "stacking": "Unique",
          "duration": "%shootingDuration",
          "onRemoved": [
            {
              "$type": "SetAnimatorTrigger",
              "triggerID": "RapidShootEndTrigger"
            }
          ],
          "onReconnect": [
            {
              "$type": "SetAnimatorTrigger",
              "triggerID": "RapidShootEndTrigger"
            }
          ]
        }
      }
    }
  },

