[
  ////////////////////////////////////////////////////////////////
  //
  //  Avoid Deathrattle Play More Than Once
  //
  ////////////////////////////////////////////////////////////////
  {
    "Default": {
      "$type": "ConfigAbility",
      "abilityName": "Monster_Sylph_Deathrattle_PlayOnce",
      "onAbilityStart": [
        {
          "$type": "ApplyModifier",
          "modifierName": "DeathTag_Change"
        }
      ],
      "modifiers": {
        "DeathTag_Change": {
          "duration": 0.1,
          "onAdded": [
            {
              "$type": "SetAnimatorInt",
              "intID": "NoMoreDeath",
              "value": 1
            }
          ]
        }
      }
    }
  },
  ////////////////////////////////////////////////////////////////
  //
  //  Special State
  //
  ////////////////////////////////////////////////////////////////
  {
    "Default": {
      "$type": "ConfigAbility",
      "abilityName": "Monster_Sylph_SpecialState",
      "onAdded": [
        {
          "$type": "SetGlobalValue",
          "key": "_SYLPH_SPECIAL_STATE_",
          "useLimitRange": true,
          "randomInRange": true,
          "minValue": 0,
          "maxValue": 1
        },
        {
          "$type": "SetGlobalValueToOverrideMap",
          "globalValueKey": "_SYLPH_SPECIAL_STATE_",
          "overrideMapKey": "Override_Sylph_RandomAction"
        },
        {
          "$type": "SetAnimatorFloat",
          "floatID": "RandomAction",
          "value": "%Override_Sylph_RandomAction"
        }
      ],
      "abilityMixins": [
        {
          "$type": "AttachToStateIDMixin",
          "stateIDs": ["SpecialState"],
          "modifierName": "SpecialState"
        }
      ],
      "modifiers": {
        "SpecialState": {
          "onAdded": [
            {
              "$type": "SetPoseBool",
              "boolID": "RandomAction",
              "value": false
            }
          ],
          "onRemoved": [
            {
              "$type": "SetPoseBool",
              "boolID": "RandomAction",
              "value": true
            },
            {
              "$type": "SetGlobalValue",
              "key": "_SYLPH_SPECIAL_STATE_",
              "useLimitRange": true,
              "randomInRange": true,
              "minValue": 0,
              "maxValue": 1
            },
            {
              "$type": "SetGlobalValueToOverrideMap",
              "globalValueKey": "_SYLPH_SPECIAL_STATE_",
              "overrideMapKey": "Override_Sylph_RandomAction"
            },
            {
              "$type": "SetAnimatorFloat",
              "floatID": "RandomAction",
              "value": "%Override_Sylph_RandomAction"
            }
          ]
        }
      },
      "abilitySpecials": {
        "Override_Sylph_RandomAction": 0
      }
    }
  },
  ////////////////////////////////////////////////////////////////
  //
  // Face
