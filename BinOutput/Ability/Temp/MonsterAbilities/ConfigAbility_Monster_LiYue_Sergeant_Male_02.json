  {
    "Default": {
      //检测周围士兵是否已经全部到位
      //到位后就发动攻击，否则超时后发动攻击
      "$type": "ConfigAbility",
      "abilityName": "Monster_Millelith_SurroundAttackOrganizing",
      "abilityMixins": [
        {
          "$type": "DoActionByStateIDMixin",
          "stateIDs": ["SurroundOrder"],
          "enterActions": [
            {
              "$type": "ApplyModifier",
              "modifierName": "SurroundAttackOrganizer"
            },
            {
              //发布包围指令
              "$type": "TriggerAbility",
              "abilityName": "Monster_Millelith_SurroundAttack_SurroundOrder"
            },
            {
              //设置包围战术点
              "$type": "TriggerAbility",
              "abilityName": "Monster_Millelith_SetSurroundPoint"
            },
            {
              //设置包围战术点
              "$type": "TriggerAbility",
              "abilityName": "Monster_Millelith_SelectSoldiers"
            }
          ]
        }
      ],
      "modifiers": {
        "SurroundAttackOrganizer": {
          //当士兵都到位时发布攻击指令
          //或者超时后发布攻击指令
          "duration": 3.0,
          "stacking": "Unique",
          "thinkInterval": 0.5,
          "onThinkInterval": [
            {
              //记录周围士兵数量
              "$type": "SetGlobalValueToOverrideMap",
              "globalValueKey": "_ABILITY_Count_NearbySoldiers",
              "overrideMapKey": "NearbySoliderCount"
            },
            {
              //若到位士兵数量已大于等于周边士兵，则发布攻击指令
              "$type": "Predicated",
              "target": "Self",
              "targetPredicates": [
                {
                  "$type": "ByTargetGlobalValue",
                  "key": "_ABILITY_Count_WaitingSoldiers",
                  "value": "%NearbySoliderCount",
                  "compareType": "MoreThanAndEqual"
                }
              ],
              "successActions": [
                {
                  "$type": "RemoveModifier",
                  "modifierName": "SurroundAttackOrganizer"
                }
              ]
            },
            {
              //若到位士兵数量已到3
              "$type": "Predicated",
              "target": "Self",
              "targetPredicates": [
                {
                  "$type": "ByTargetGlobalValue",
                  "key": "_ABILITY_Count_WaitingSoldiers",
                  "value": 3,
                  "compareType": "MoreThanAndEqual"
                }
              ],
              "successActions": [
                {
                  "$type": "RemoveModifier",
                  "modifierName": "SurroundAttackOrganizer"
                }
              ]
            }
          ],
          "OnAdded": [
            {
              //记录到位士兵数量
              "$type": "AddGlobalValue",
              "key": "_ABILITY_Count_WaitingSoldiers",
              "value": -10,
              "useLimitRange": true,
              "maxValue": 4,
              "minValue": 0
            }
          ],
          "onRemoved": [
            {
              //清理到位士兵数量记录
              "$type": "AddGlobalValue",
              "key": "_ABILITY_Count_WaitingSoldiers",
              "value": -10,
              "useLimitRange": true,
              "maxValue": 4,
              "minValue": 0
            },
            {
              //清理周围士兵数量记录
              "$type": "SetOverrideMapValue",
              "overrideMapKey": "NearbySoliderCount",
              "value": 0
            },
            {
              //发布攻击指令
              "$type": "TriggerAbility",
              "abilityName": "Monster_Millelith_SurroundAttack_AttackdOrder"
            }
          ]
        }
      },
      "abilitySpecials": {
        "NearbySoliderCount": 0
      }
    }
  }
