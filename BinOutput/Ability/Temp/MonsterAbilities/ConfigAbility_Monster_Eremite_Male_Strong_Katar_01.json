  //improve logic
  {
    "Default": {
      "$type": "ConfigAbility",
      "abilityName": "Monster_Eremite_Male_Strong_Katar_Improve",
      "abilityMixins": [
        {
          "$type": "AttachModifierToSelfGlobalValueMixin",
          "globalValueKey": "_MONSTER_EREMITE_IMPROVED_",
          "defaultGlobalValueOnCreate": 0,
          "valueSteps": [-0.5, 0.5, 1.5],
          "removeAppliedModifier": true,
          "modifierNameSteps": ["Eremite_NormalState", "Eremite_ImproveState"]
        }, //强化状态判定
        {
          "$type": "AttachModifierToSelfGlobalValueMixin",
          "globalValueKey": "_MONSTER_EREMITE_WEAK_",
          "defaultGlobalValueOnCreate": 0,
          "valueSteps": [-0.5, 0.5, 1.5],
          "removeAppliedModifier": true,
          "modifierNameSteps": ["Eremite_IsNotWeak", "Eremite_IsWeak"]
        }, //虚弱状态判定
        {
          "$type": "AttachModifierToSelfGlobalValueMixin",
          "globalValueKey": "_EREMITE_SLAVE_DIE_",
          "defaultGlobalValueOnCreate": 0,
          "valueSteps": [-0.5, 0.5, 1.5],
          "removeAppliedModifier": true,
          "modifierNameSteps": ["Empty", "Eremite_RemoveImprove"]
        }, //鳄鱼死亡
        {
          "$type": "AttachModifierToSelfGlobalValueMixin",
          "globalValueKey": "_MONSTER_EREMITE_OUTIMPROVED",
          "defaultGlobalValueOnCreate": 0,
          "valueSteps": [-0.5, 0.5, 1.5],
          "removeAppliedModifier": true,
          "modifierNameSteps": [
            "Eremite_ISNotOutImproved",
            "Eremite_IsOutImproved"
          ]
        }, //从强化状态退出后的普通状态判定
        {
          "$type": "AttachModifierToHPPercentMixin",
          "valueSteps": [0.7],
          "modifierNameSteps": ["Empty", "UNIQUE_Eremite_Force_ImproveState"]
        }, //强制进行强化
        {
          "$type": "AttachToStateIDMixin",
          "stateIDs": ["Improve"],
          "modifierName": "Improve_AddEndure"
        }, //转阶段霸体
        {
          "$type": "AttachToPoseIDMixin",
          "poseIDs": [111, 201, 301],
          "modifierName": "Improve_AddEndure"
        }, //强化阶段霸体
        {
          "$type": "DoActionByStateIDMixin",
          "stateIDs": ["Die", "Die_RagDoll"],
          "enterActions": [
            {
              "$type": "RemoveModifier",
              "modifierName": "Eremite_Improve_Effect"
            }
          ]
        }, //死亡移除强化特效
        {
          "$type": "AttachToPoseIDMixin",
          "poseIDs": [102],
          "modifierName": "WeakEnd_AddEndureHandle"
        } //退出强化后的霸体跟体重状态
      ],
      "onAdded": [],
      "modifiers": {
        "Improve_AddEndure": {
          "properties": {
            "Actor_EndureDelta": 0.0,
            "Entity_WeightRatio": 5.0
          }
        },
        "Empty": {},
        "Eremite_RemoveImprove": {
          "onAdded": [
            {
              "$type": "RemoveUniqueModifier",
              "modifierName": "UNIQUE_Eremite_ImproveState_Properties"
            }
          ]
        },
        "UNIQUE_Eremite_Force_ImproveState": {
          "stacking": "Unique",
          "isUnique": true,
          "onAdded": [
            {
              "$type": "SetPoseBool",
              "boolID": "ForceImprove",
              "value": true,
              "canBeHandledOnRecover": true,
              "predicates": [
                {
                  "$type": "ByTargetGlobalValue",
                  "target": "Self",
                  "key": "_MONSTER_EREMITE_IMPROVED_COUNT_",
                  "value": 0,
                  "compareType": "NoneOrEqual"
                }
              ]
            },
            {
              "$type": "SetAISkillCDAvailableNow",
              "skillIDs": [401]
            } //重置cd
          ],
          "onRemoved": [
            {
              "$type": "SetPoseBool",
              "boolID": "ForceImprove",
              "value": false
            }
          ]
        },
        "Eremite_NormalState": {
          "onAdded": [
            {
              "$type": "SetPoseBool",
              "boolID": "ImproveState",
              "value": false,
              "canBeHandledOnRecover": true
            },
            {
              "$type": "RemoveModifier",
              "modifierName": "Eremite_ImproveState"
            }
          ]
        },
        "Eremite_ImproveState": {
          "onAdded": [
            {
              "$type": "SetPoseBool",
              "boolID": "ImproveState",
              "value": true,
              "canBeHandledOnRecover": true
            },
            {
              "$type": "RemoveModifier",
              "modifierName": "Eremite_NormalState"
            }
          ]
        },
        "Eremite_IsNotWeak": {
          "onAdded": [
            {
              "$type": "SetPoseBool",
              "boolID": "WeakState",
              "value": false,
              "canBeHandledOnRecover": true
            },
            {
              "$type": "RemoveModifier",
              "modifierName": "Eremite_IsWeak"
            }
          ]
        },
        "Eremite_IsWeak": {
          "onAdded": [
            {
              "$type": "SetPoseBool",
              "boolID": "WeakState",
              "value": true,
              "canBeHandledOnRecover": true
            },
            {
              "$type": "RemoveModifier",
              "modifierName": "Eremite_IsNotWeak"
            }
          ]
        },
        "Eremite_IsOutImproved": {
          "onAdded": [
            {
              "$type": "SetPoseBool",
              "boolID": "OutImproved",
              "value": true,
              "canBeHandledOnRecover": true
            },
            {
              "$type": "RemoveModifier",
              "modifierName": "Eremite_ISNotOutImproved"
            }
          ]
        },
        "Eremite_ISNotOutImproved": {
          "onAdded": [
            {
              "$type": "SetPoseBool",
              "boolID": "OutImproved",
              "value": false,
              "canBeHandledOnRecover": true
            },
            {
              "$type": "RemoveModifier",
              "modifierName": "Eremite_IsOutImproved"
            }
          ]
        },
        "Eremite_Improve_Effect": {
          "onAdded": [
            {
              "$type": "AttachEffect",
              "effectPattern": "Eff_Monster_Eremite_Male_Strong_Katar_Rock_Improve_Loop_01"
            }
          ]
        },
        "UNIQUE_Eremite_ImproveState_Properties": {
          "isUnique": true,
          "stacking": "Unique",
          "properties": {
            //体重增加
            "Entity_WeightRatio": 5.0,
            //全抗+0.5
            "Actor_PhysicalSubHurtDelta": 0.5,
            "Actor_FireSubHurtDelta": 0.5,
            "Actor_ElecSubHurtDelta": 0.5,
            "Actor_WaterSubHurtDelta": 0.5,
            "Actor_GrassSubHurtDelta": 0.5,
            "Actor_WindSubHurtDelta": 0.5,
            "Actor_IceSubHurtDelta": 0.5,
            "Actor_RockSubHurtDelta": 0.5
          },
          "onAdded": [
            // 进入强化状态
            {
              "$type": "AddGlobalValue",
              "key": "_MONSTER_EREMITE_IMPROVED_",
              "value": 10,
              "useLimitRange": true,
              "maxValue": 1,
              "minValue": 0,
              "canBeHandledOnRecover": true
            },
            //强化次数+1
            {
              "$type": "AddGlobalValue",
              "key": "_MONSTER_EREMITE_RECOVER_",
              "value": -10,
              "useLimitRange": true,
              "maxValue": 1,
              "minValue": 0,
              "canBeHandledOnRecover": true
            },
            //重置恢复状态为0
            {
              "$type": "AddGlobalValue",
              "key": "_MONSTER_EREMITE_IMPROVED_COUNT_",
              "minValue": 0,
              "maxValue": 99,
              "useLimitRange": true,
              "value": 1
            },
            {
              "$type": "AttachModifier",
              "modifierName": "Eremite_Improve_Effect"
            },
            {
              "$type": "SetAISkillGCD",
              "value": 6
            }
          ],
          "onRemoved": [
            {
              "$type": "AddGlobalValue",
              "key": "_EREMITE_WEAK_TIMES_",
              "value": 1,
              "maxValue": 100,
              "minValue": 0,
              "useLimitRange": true,
              "canBeHandledOnRecover": true
            },
            {
              "$type": "SetAnimatorTrigger",
              "triggerID": "Weak",
              "doOffStage": true,
              "predicates": [
                {
                  "$type": "ByTargetGlobalValue",
                  "key": "_MONSTER_EREMITE_RETURNTOBORN_",
                  "value": 0,
                  "target": "Self",
                  "compareType": "Equal"
                }
              ]
            },
            //判定是否是从Weak出来后的普通状态
            {
              "$type": "KillSelf",
              "otherTargets": {
                "$type": "SelectTargetsByChildren",
                "configID": 25110101,
                "sortType": "Default"
              }
            },
            {
              "$type": "ApplyModifier",
              "modifierName": "Eremite_Out_Imporve"
            },
            {
              "$type": "RemoveModifier",
              "modifierName": "Eremite_Improve_Effect"
            },
            {
              "$type": "RemoveUniqueModifier",
              "modifierName": "UNIQUE_Eremite_Force_ImproveState"
            } //移除强制进入强化状态的状态
          ]
        },
        "WeakEnd_AddEndureHandle": {
          "properties": {
            "Actor_EndureDelta": 5
          }
        },
        "Eremite_Out_Imporve": {
          "duration": 1,
          "onAdded": [
            {
              "$type": "SetGlobalValue",
              "key": "_MONSTER_EREMITE_OUTIMPROVED",
              "minValue": 0,
              "maxValue": 1,
              "useLimitRange": true,
              "value": 1
            },
            {
              "$type": "AddGlobalValue",
              "key": "_MONSTER_EREMITE_IMPROVED_",
              "value": -10,
              "useLimitRange": true,
              "maxValue": 1,
              "minValue": 0,
              "canBeHandledOnRecover": true
            }, // 退出强化状态
            {
              "$type": "AddGlobalValue",
              "key": "_MONSTER_EREMITE_WEAK_",
              "value": 10,
              "useLimitRange": true,
              "maxValue": 1,
              "minValue": 0,
              "canBeHandledOnRecover": true
            } // 进入虚弱状态
          ]
        }
      },
      "onAbilityStart": [
        {
          "$type": "AttachModifier",
          "modifierName": "UNIQUE_Eremite_ImproveState_Properties"
        } //进入强化状态
      ]
