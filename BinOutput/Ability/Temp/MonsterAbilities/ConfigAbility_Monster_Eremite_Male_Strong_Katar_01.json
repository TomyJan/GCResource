  {
    "Default": {
      "$type": "ConfigAbility",
      "abilityName": "Monster_Eremite_Male_Strong_Katar_FightControl",
      "abilityMixins": [
        {
          "$type": "AttachToPoseIDMixin",
          "poseIDs": [
            1, //free
            2,
            901,
            902,
            903 //reborn
          ],
          "modifierName": "Eremite_OutFightState"
        },
        {
          "$type": "AttachToPoseIDMixin",
          "poseIDs": [
            101, //FightNormal
            102, //FightNormal_OutImproved
            111, //ForceImprove
            201, //FightImproved
            301 //FightWeak
          ],
          "modifierName": "Eremite_InFightState"
        }
      ],
      "onAdded": [
        //强化状态
        {
          "$type": "SetGlobalValue",
          "key": "_MONSTER_EREMITE_IMPROVED_",
          "minValue": 0,
          "maxValue": 1,
          "useLimitRange": true,
          "value": 0
        },
        //重置虚弱次数为0
        {
          "$type": "SetGlobalValue",
          "key": "_EREMITE_WEAK_TIMES_",
          "minValue": 0,
          "maxValue": 100,
          "useLimitRange": true,
          "value": 0
        },
        //判定是否是从Weak出来后的普通状态
        {
          "$type": "SetGlobalValue",
          "key": "_MONSTER_EREMITE_OUTIMPROVED",
          "minValue": 0,
          "maxValue": 1,
          "useLimitRange": true,
          "value": 0
        },
        //强化次数
        {
          "$type": "SetGlobalValue",
          "key": "_MONSTER_EREMITE_IMPROVED_COUNT_",
          "minValue": 0,
          "maxValue": 99,
          "useLimitRange": true,
          "value": 0
        },
        //是否入战
        {
          "$type": "SetGlobalValue",
          "key": "_MONSTER_EREMITE_ISINFIGHT_",
          "minValue": 0,
          "maxValue": 1,
          "useLimitRange": true,
          "value": 0
        },
        //虚弱状态
        {
          "$type": "SetGlobalValue",
          "key": "_MONSTER_EREMITE_WEAK_",
          "minValue": 0,
          "maxValue": 1,
          "useLimitRange": true,
          "value": 0
        },
        //是否处于重生状态
        {
          "$type": "SetGlobalValue",
          "key": "_MONSTER_EREMITE_RETURNTOBORN_",
          "value": 0,
          "useLimitRange": true,
          "maxValue": 1,
          "minValue": 0
        }
      ],
      "modifiers": {
        "Eremite_OutFightState": {
          "onAdded": [
            {
              "$type": "AddGlobalValue",
              "key": "_MONSTER_EREMITE_ISINFIGHT_",
              "value": -10,
              "useLimitRange": true,
              "maxValue": 1,
              "minValue": 0
            }, // out fight
            {
              "$type": "RemoveModifier",
              "modifierName": "Eremite_InFightState"
            } //remove in fight
          ]
        },
        "Eremite_InFightState": {
          "onAdded": [
            {
              "$type": "AddGlobalValue",
              "key": "_MONSTER_EREMITE_ISINFIGHT_",
              "value": 10,
