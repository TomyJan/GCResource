  //被打破是暗掉
  {
    "Default": {
      "$type": "ConfigAbility",
      "abilityName": "Monster_Mimik_Ice_ElementState_On",
      "onAbilityStart": [
        {
          //打开发光材质动画
          "$type": "SetAnimatorTrigger",
          "triggerID": "NonetoStage1",
          "target": "Caster",
          "MPTriggerOnRemote": true
        }
      ]
    }
  },
  {
    "Default": {
      "$type": "ConfigAbility",
      "abilityName": "Monster_Mimik_Ice_ElementState_Off",
      "onAbilityStart": [
        {
          //关闭发光材质动画
