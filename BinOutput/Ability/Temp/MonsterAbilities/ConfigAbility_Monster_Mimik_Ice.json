  ////////////////////////////////////////////////////////////////
  //
  //  AbsorbFruit
  //
  ////////////////////////////////////////////////////////////////
  {
    "Default": {
      //在吸收果实时，改变受击盒，播放相应表现
      "$type": "ConfigAbility",
      "abilityName": "Monster_Mimik_Ice_Fruit_Effect",
      "onAbilityStart": [
        {
          "$type": "AttachModifier",
          "modifierName": "UNIQUE_Mimik_Ice_Fruit_Effect",
          "target": "Self"
        }
      ],
      "modifiers": {
        "UNIQUE_Mimik_Ice_Fruit_Effect": {
          //管理平时的受击盒和充能时的受击盒
          "stacking": "Unique",
          "isUnique": true,
          "onAdded": [
            //打开果实受击盒，关闭其它
            {
              "$type": "EnableHitBoxByName",
              "hitBoxNames": ["HitBox_Fruit"],
              "setEnable": true
            },
            {
              "$type": "EnableHitBoxByName",
              "hitBoxNames": ["HitBox", "HeadBox"],
              "setEnable": false
            }
          ],
          "onRemoved": [
            //关闭果实受击盒，打开其它
            {
              "$type": "EnableHitBoxByName",
              "hitBoxNames": ["HitBox_Fruit"],
              "setEnable": false
            },
            {
              "$type": "EnableHitBoxByName",
              "hitBoxNames": ["HitBox", "HeadBox"],
              "setEnable": true
            }
          ]
        }
      }
    }
  },
  {
    "Default": {
      //技能过程中增加重量
      "$type": "ConfigAbility",
      "abilityName": "Monster_Mimik_Ice_AbsorbFruitState",
      "abilityMixins": [
        {
          //在吸收果实期间挂载modifier
          "$type": "AttachToStateIDMixin",
          "stateIDs": [
            "AbsorbFruit",
            "AbsorbFruit_Loop",
            "ForwardShoot01",
            "UpperShoot02"
          ],
          "modifierName": "AddWeight"
        },
        {
          //在吸收果实期间挂载modifier
          "$type": "AttachToStateIDMixin",
          "stateIDs": [
            "AbsorbFruit",
            "AbsorbFruit_Loop",
            "ForwardShoot01",
            "UpperShoot02"
          ],
          "modifierName": "ResetFruitSkillCD"
        }
      ],
      "modifiers": {
        "AddWeight": {
          "properties": {
            "Entity_WeightRatio": 5.0
          }
        },
        "ResetFruitSkillCD": {
          "onRemoved": [
            {
              "$type": "ReTriggerAISkillInitialCD",
              "skillIDs": [301, 311, 312]
            }
          ]
        }
      }
    }
  },
  {
    "Default": {
      //吸收果实时，给拟态草挂载元素盾
      //元素盾挂载时，自动触发果实充能表现
      //元素盾被击破时，触发眩晕
      "$type": "ConfigAbility",
      "abilityName": "Monster_Mimik_Ice_AbsorbFruit",
      "abilityMixins": [
        {
          //在吸收果实期间挂载modifier
          "$type": "AttachToStateIDMixin",
          "stateIDs": ["AbsorbFruit_Loop"],
          "modifierName": "UNIQUE_Mimik_Ice_Fruit"
        }
      ],
      "modifiers": {
        "UNIQUE_Mimik_Ice_Fruit": {
          //实现果实相关逻辑的主要modifier
          //带有ShieldBarMixin 在Durability被反应完时触发onShieldBroken，就是眩晕之类的效果
          "stacking": "Unique",
          "isUnique": true,
          "forceSyncToRemote": true,
          "elementType": "Frozen",
          "elementDurability": 50,
          "modifierMixins": [
            {
              "$type": "ShieldBarMixin",
              "onShieldBroken": [
                //盾被击破时：
                {
                  "$type": "ActCameraShake",
                  "cameraShake": {
                    "shakeType": "Center",
                    "shakeRange": 0.2,
                    "shakeTime": 0.12,
                    "shakeDistance": 30,
                    "extension": {
                      "baseOnCamera": true
                    }
                  }
                },
                {
                  //开始击晕倒计时
                  "$type": "TriggerAbility",
                  "abilityName": "Monster_Mimik_Ice_DownManager",
                  "target": "Caster"
                },
                {
                  //进入击晕Pose状态
                  "$type": "SetPoseBool",
                  "boolID": "Down",
                  "value": true,
                  "target": "Caster"
                },
                {
                  //进入击晕Animator状态
                  "$type": "SetAnimatorTrigger",
                  "triggerID": "DownTrigger",
                  "target": "Caster",
                  "MPTriggerOnRemote": true
                }
              ]
            }
          ],
          "onAdded": [
            {
              "$type": "AddGlobalValue",
              "key": "_ABILITY_MIMIK_ICE_FRUIT",
              "value": 1,
              "useLimitRange": true,
              "maxValue": 1,
              "minValue": 0
            },
            {
              //播放充能表现
              "$type": "TriggerAbility",
              "abilityName": "Monster_Mimik_Ice_Fruit_Effect",
              "target": "Self"
            },
            {
              "$type": "AttachEffect",
              "effectPattern": "Eff_Monster_Mimik_Ice_AbsorbFruit_Loop_01"
            }
          ],
          "onKill": [
            //被杀时销毁自身
            {
              "$type": "RemoveUniqueModifier",
              "modifierName": "UNIQUE_Mimik_Ice_Fruit"
            }
          ],
          "onRemoved": [
            {
              "$type": "AddGlobalValue",
              "key": "_ABILITY_MIMIK_ICE_FRUIT",
              "value": -1,
              "useLimitRange": true,
              "maxValue": 1,
              "minValue": 0
            },
            {
              "$type": "RemoveUniqueModifier",
              "modifierName": "UNIQUE_Mimik_Ice_Fruit_Effect"
            }
          ]
        }
      }
    }
  },
  {
    "Default": {
      //控制击晕的持续时间
      "$type": "ConfigAbility",
      "abilityName": "Monster_Mimik_Ice_DownManager",
      "abilityMixins": [
        {
          "$type": "AttachToAnimatorStateIDMixin",
          "stateIDs": ["Down_AS"],
          "modifierName": "RecoverManager"
        }
      ],
      "onAbilityStart": [
        {
          "$type": "AttachModifier",
          "modifierName": "UNIQUE_DownTimer",
          "target": "Self"
        }
      ],
      "modifiers": {
        "UNIQUE_DownTimer": {
          "isUnique": true,
          "forceSyncToRemote": true,
          "duration": 15.0,
          "onAdded": [
            {
              "$type": "AttachEffect",
              "effectPattern": "Eff_Monster_Mimik_Ice_Down_01"
            },
            {
              "$type": "AttachEffect",
              "effectPattern": "Eff_Monster_Mimik_Ice_Down_02"
            },
            {
              "$type": "SetPoseBool",
              "boolID": "Recover",
              "value": true
            }
          ],
          "onRemoved": [
            {
              "$type": "SetPoseBool",
              "boolID": "Down",
              "value": false
            },
            {
              "$type": "SetAnimatorTrigger",
              "triggerID": "RecoverTrigger",
              "MPTriggerOnRemote": true
            }
            // {
            // 	"$type": "ReTriggerAISkillInitialCD",
            // 	"skillIDs": [301, 311, 312],
            // },
          ]
        },
        "RecoverManager": {
          "forceSyncToRemote": true,
          "duration": 1.5,
          "onRemoved": [
            {
              "$type": "SetPoseBool",
              "boolID": "Recover",
              "value": false
            },
            {
              "$type": "ReTriggerAISkillInitialCD",
              "skillIDs": [301, 311, 312]
            }
          ]
        }
      }
    }
  },
