              "triggerType": "TriggerNoRepeat",
              "radius": 3.0,
              "fanAngle": 70,
              "height": 1.7,
              "born": {
                "$type": "ConfigBornBySelf",
                "offset": {
                  "x": 0.0,
                  "y": 0.0,
                  "z": -0.3
                }
              }
            },
            "attackInfo": {
              "canBeModifiedBy": "OriginOwner",
              "attackTag": "EremiteThrowSand", // 攻击标记
              "attackProperty": {
                "damagePercentage": 0.0,
                "strikeType": "None",
                "elementType": "None",
