        // 	"alertness": [0],
        // 	"modifierName": "NotAlertMark"
        // }
      ],
      "onAdded": [
        {
          "$type": "SetGlobalValue",
          "key": "_EREMITE_SHEATHWEAPON_",
          "value": 1,
          "canBeHandledOnRecover": true
        }
      ],
      "onAbilityStart": [
        {
