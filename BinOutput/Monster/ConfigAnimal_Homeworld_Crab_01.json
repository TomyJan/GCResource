      "enable": true,
      "defaultSetting": {
        "speedLevel": 1,
        "cdMin": 1.0,
        "cdMax": 3.0,
        "distanceFromBorn": 10.0,
        "distanceFromCurrentMin": 1.5,
        "distanceFromCurrentMax": 3.0
      }
    },
    "fleeTactic": {
      "enable": true,
      "condition": {
        "pose": [101]
      },
      "nerveTrigger": ["HIT"],
      "defaultSetting": {
        "speedLevel": 2,
        "cd": 0.0,
        "triggerDistance": 200,
        "fleeAngle": 180,
        "fleeDistanceMin": 20.0,
        "fleeDistanceMax": 30.0,
        "killSelfTime": 3.0
      }
    }
